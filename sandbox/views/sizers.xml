<wxv:Container xmlns='wx'
               xmlns:wxv='wxviews'
               xmlns:import='pyviews.rendering.modifiers.import_global'
               xmlns:call='wxviews.modifiers.call'
               xmlns:init='init'
               xmlns:sizer='sizer'

               import:wx='wx'>

    <BoxSizer init:orient='{wx.VERTICAL}'>

        <StaticText Label='Panel with border 20'
                    sizer:flag='{wx.EXPAND|wx.ALL}' />

        <Panel BackgroundColor='white'
               sizer:proportion='{1}'
               sizer:flag='{wx.EXPAND|wx.ALL}'
               sizer:border='{20}'>
            <StaticText Label='Text inside panel'
                        sizer:flag='{wx.EXPAND|wx.ALL}' />
        </Panel>

        <StaticText Label='Box sizer'
                    sizer:flag='{wx.EXPAND|wx.ALL}'/>

        <BoxSizer init:orient='{wx.HORIZONTAL}'
                  sizer:proportion='{1}'
                  sizer:flag='{wx.EXPAND|wx.ALL}'>
            <Panel BackgroundColor='red'
                   sizer:proportion='{1}'
                   sizer:flag='{wx.EXPAND|wx.RIGHT}'
                   sizer:border='{10}'/>
            <Panel BackgroundColor='green'
                   sizer:proportion='{1}'
                   sizer:flag='{wx.EXPAND|wx.ALL}'
                   sizer:border='{10}'/>
            <Panel BackgroundColor='blue'
                   sizer:proportion='{2}'
                   sizer:flag='{wx.ALIGN_TOP|wx.ALL}'
                   sizer:border='{10}'/>
        </BoxSizer>

        <StaticText Label='Grid sizer'
                    sizer:flag='{wx.EXPAND|wx.ALL}'/>
        <GridSizer init:rows='{4}'
                   init:cols='{4}'
                   init:vgap='{1}'
                   init:hgap='{1}'
                   sizer:proportion='{1}'
                   sizer:flag='{wx.EXPAND|wx.ALL}'
                   sizer:border='{1}'>
            <wxv:For items='{list(range(16))}'>
                <Panel sizer:proportion='{0}'
                       sizer:flag='{wx.EXPAND}'
                       BackgroundColor='white'>
                    <StaticText call:SetLabel='{str(index)}'/>
                </Panel>
            </wxv:For>
        </GridSizer>

        <!-- <StaticText Label='FlexGrid sizer'
                    sizer:flag='{wx.EXPAND|wx.ALL}'/>
        <FlexGridSizer init:rows='{3}'
                       init:cols='{2}'
                       init:vgap='{1}'
                       init:hgap='{1}'
                       sizer:proportion='{1}'
                       sizer:flag='{wx.EXPAND|wx.ALL}'
                       sizer:border='{1}'
                       call:AddGrowableRow='{(2,1)}'
                       call:AddGrowableCol='{(1,1)}'>
            <wxv:For items='{list(range(6))}'>
                <Panel sizer:args='{[0, wx.EXPAND]}'
                       BackgroundColor='white'>
                    <StaticText call:SetLabel='{str(index)}'/>
                </Panel>
            </wxv:For>
        </FlexGridSizer> -->
    </BoxSizer>
</wxv:Container>